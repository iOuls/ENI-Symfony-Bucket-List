{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
    {{ form_start(registrationForm) }}
    <h1>Register</h1>
    {{ form_label(registrationForm.username) }} <br>
    {{ form_widget(registrationForm.username) }} <br>

    {{ form_label(registrationForm.email) }} <br>
    {{ form_widget(registrationForm.email) }} <br>

    <label for="registration_form_plainPassword">Password</label> <br>
    {{ form_widget(registrationForm.plainPassword) }} <br>

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
